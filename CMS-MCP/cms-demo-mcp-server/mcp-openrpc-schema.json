{
  "openrpc": "1.0.0",
  "info": {
    "version": "1.0.0",
    "title": "CMS Demo MCP Server",
    "description": "MCP (Model Context Protocol) Server that exposes 10 tools for Customer and Card Management System. Provides AI-accessible APIs for managing customers and cards through the CMS Demo API."
  },
  "servers": [
    {
      "name": "production",
      "url": "https://cms-demo-mcp-server-dl2x0l.5sc6y6-2.usa-e2.cloudhub.io",
      "summary": "CloudHub 2.0 Production Server",
      "description": "MCP server running on CloudHub 2.0 in US-East-2"
    }
  ],
  "methods": [
    {
      "name": "get_all_customers",
      "summary": "Retrieves all customers from the CMS API",
      "description": "Returns a list of all customers in the Customer Management System",
      "params": [],
      "result": {
        "name": "customers",
        "description": "List of all customers",
        "schema": {
          "type": "object",
          "properties": {
            "customers": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/Customer"
              }
            }
          }
        }
      }
    },
    {
      "name": "get_customer_by_id",
      "summary": "Retrieves a specific customer by their ID",
      "description": "Returns detailed information about a specific customer",
      "params": [
        {
          "name": "customerId",
          "description": "The unique identifier of the customer",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "result": {
        "name": "customer",
        "description": "Customer details",
        "schema": {
          "$ref": "#/components/schemas/Customer"
        }
      }
    },
    {
      "name": "create_customer",
      "summary": "Creates a new customer in the CMS",
      "description": "Creates a new customer record with the provided information",
      "params": [
        {
          "name": "name",
          "description": "The name of the customer",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "email",
          "description": "The email address of the customer",
          "required": true,
          "schema": {
            "type": "string",
            "format": "email"
          }
        },
        {
          "name": "phone",
          "description": "The phone number of the customer",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "result": {
        "name": "customer",
        "description": "Created customer details",
        "schema": {
          "$ref": "#/components/schemas/Customer"
        }
      }
    },
    {
      "name": "update_customer",
      "summary": "Updates an existing customer's information",
      "description": "Updates the information of an existing customer",
      "params": [
        {
          "name": "customerId",
          "description": "The unique identifier of the customer",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "name",
          "description": "The name of the customer",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "email",
          "description": "The email address of the customer",
          "required": true,
          "schema": {
            "type": "string",
            "format": "email"
          }
        },
        {
          "name": "phone",
          "description": "The phone number of the customer",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "result": {
        "name": "customer",
        "description": "Updated customer details",
        "schema": {
          "$ref": "#/components/schemas/Customer"
        }
      }
    },
    {
      "name": "delete_customer",
      "summary": "Deletes a customer from the CMS",
      "description": "Removes a customer record from the system",
      "params": [
        {
          "name": "customerId",
          "description": "The unique identifier of the customer to delete",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "result": {
        "name": "deleteResult",
        "description": "Deletion confirmation",
        "schema": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string"
            },
            "customerId": {
              "type": "string"
            }
          }
        }
      }
    },
    {
      "name": "get_all_cards",
      "summary": "Retrieves all cards from the CMS API",
      "description": "Returns a list of all cards in the Card Management System",
      "params": [],
      "result": {
        "name": "cards",
        "description": "List of all cards",
        "schema": {
          "type": "object",
          "properties": {
            "cards": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/Card"
              }
            }
          }
        }
      }
    },
    {
      "name": "get_card_by_id",
      "summary": "Retrieves a specific card by its ID",
      "description": "Returns detailed information about a specific card",
      "params": [
        {
          "name": "cardId",
          "description": "The unique identifier of the card",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "result": {
        "name": "card",
        "description": "Card details",
        "schema": {
          "$ref": "#/components/schemas/Card"
        }
      }
    },
    {
      "name": "create_card",
      "summary": "Creates a new card in the CMS",
      "description": "Creates a new card record with the provided information",
      "params": [
        {
          "name": "customerId",
          "description": "The ID of the customer who owns this card",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "cardNumber",
          "description": "The card number",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "cardType",
          "description": "The type of card (Credit, Debit, etc.)",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "expiryDate",
          "description": "The expiry date of the card (MM/YY)",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "result": {
        "name": "card",
        "description": "Created card details",
        "schema": {
          "$ref": "#/components/schemas/Card"
        }
      }
    },
    {
      "name": "update_card",
      "summary": "Updates an existing card's information",
      "description": "Updates the information of an existing card",
      "params": [
        {
          "name": "cardId",
          "description": "The unique identifier of the card",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "cardNumber",
          "description": "The card number",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "cardType",
          "description": "The type of card (Credit, Debit, etc.)",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "expiryDate",
          "description": "The expiry date of the card (MM/YY)",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "result": {
        "name": "card",
        "description": "Updated card details",
        "schema": {
          "$ref": "#/components/schemas/Card"
        }
      }
    },
    {
      "name": "delete_card",
      "summary": "Deletes a card from the CMS",
      "description": "Removes a card record from the system",
      "params": [
        {
          "name": "cardId",
          "description": "The unique identifier of the card to delete",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "result": {
        "name": "deleteResult",
        "description": "Deletion confirmation",
        "schema": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string"
            },
            "cardId": {
              "type": "string"
            }
          }
        }
      }
    }
  ],
  "components": {
    "schemas": {
      "Customer": {
        "type": "object",
        "properties": {
          "customerId": {
            "type": "string",
            "description": "Unique identifier for the customer"
          },
          "name": {
            "type": "string",
            "description": "Customer's full name"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Customer's email address"
          },
          "phone": {
            "type": "string",
            "description": "Customer's phone number"
          }
        },
        "required": ["customerId", "name", "email"]
      },
      "Card": {
        "type": "object",
        "properties": {
          "cardId": {
            "type": "string",
            "description": "Unique identifier for the card"
          },
          "customerId": {
            "type": "string",
            "description": "ID of the customer who owns the card"
          },
          "cardNumber": {
            "type": "string",
            "description": "Card number (may be masked)"
          },
          "cardType": {
            "type": "string",
            "description": "Type of card (Credit, Debit, etc.)"
          },
          "expiryDate": {
            "type": "string",
            "description": "Card expiry date (MM/YY format)"
          }
        },
        "required": ["cardId", "customerId", "cardNumber", "cardType", "expiryDate"]
      }
    }
  }
}

