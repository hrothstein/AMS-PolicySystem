{
  "mcpServers": {
    "cms-demo-mcp-server": {
      "name": "CMS Demo MCP Server",
      "version": "1.0.0",
      "description": "MCP (Model Context Protocol) Server that exposes 10 tools for Customer and Card Management System. Provides AI-accessible APIs for managing customers and cards through the CMS Demo API.",
      "transport": "sse",
      "url": "https://cms-demo-mcp-server-dl2x0l.5sc6y6-2.usa-e2.cloudhub.io",
      "environment": {
        "PRODUCTION": "https://cms-demo-mcp-server-dl2x0l.5sc6y6-2.usa-e2.cloudhub.io",
        "SANDBOX": "https://cms-demo-mcp-server-dl2x0l.5sc6y6-2.usa-e2.cloudhub.io"
      },
      "metadata": {
        "author": "MuleSoft",
        "license": "Apache-2.0",
        "homepage": "https://anypoint.mulesoft.com/exchange/a985e716-cd81-4160-9e00-91c97363ae9d/cms-demo-mcp-server",
        "repository": "https://github.com/mulesoft/cms-demo-mcp-server",
        "keywords": [
          "mcp",
          "model-context-protocol",
          "cms",
          "customer-management",
          "card-management",
          "ai-tools",
          "mulesoft",
          "mule-4"
        ],
        "tags": [
          "MCP Server",
          "Customer Management",
          "Card Management",
          "AI Integration",
          "REST API"
        ]
      },
      "capabilities": {
        "tools": true,
        "resources": false,
        "prompts": false
      },
      "tools": [
        {
          "name": "get_all_customers",
          "description": "Retrieves all customers from the CMS API",
          "inputSchema": {
            "type": "object",
            "properties": {},
            "required": []
          },
          "examples": [
            {
              "input": {},
              "output": "{\"customers\": [{\"customerId\": \"123\", \"name\": \"John Doe\", \"email\": \"john@example.com\", \"phone\": \"555-1234\"}]}"
            }
          ]
        },
        {
          "name": "get_customer_by_id",
          "description": "Retrieves a specific customer by their ID",
          "inputSchema": {
            "type": "object",
            "properties": {
              "customerId": {
                "type": "string",
                "description": "The unique identifier of the customer"
              }
            },
            "required": ["customerId"]
          },
          "examples": [
            {
              "input": {"customerId": "123"},
              "output": "{\"customerId\": \"123\", \"name\": \"John Doe\", \"email\": \"john@example.com\", \"phone\": \"555-1234\"}"
            }
          ]
        },
        {
          "name": "create_customer",
          "description": "Creates a new customer in the CMS",
          "inputSchema": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of the customer"
              },
              "email": {
                "type": "string",
                "description": "The email address of the customer"
              },
              "phone": {
                "type": "string",
                "description": "The phone number of the customer"
              }
            },
            "required": ["name", "email", "phone"]
          },
          "examples": [
            {
              "input": {"name": "Jane Smith", "email": "jane@example.com", "phone": "555-5678"},
              "output": "{\"customerId\": \"456\", \"name\": \"Jane Smith\", \"email\": \"jane@example.com\", \"phone\": \"555-5678\"}"
            }
          ]
        },
        {
          "name": "update_customer",
          "description": "Updates an existing customer's information",
          "inputSchema": {
            "type": "object",
            "properties": {
              "customerId": {
                "type": "string",
                "description": "The unique identifier of the customer"
              },
              "name": {
                "type": "string",
                "description": "The name of the customer"
              },
              "email": {
                "type": "string",
                "description": "The email address of the customer"
              },
              "phone": {
                "type": "string",
                "description": "The phone number of the customer"
              }
            },
            "required": ["customerId", "name", "email", "phone"]
          },
          "examples": [
            {
              "input": {"customerId": "123", "name": "John Doe Updated", "email": "john.updated@example.com", "phone": "555-9999"},
              "output": "{\"customerId\": \"123\", \"name\": \"John Doe Updated\", \"email\": \"john.updated@example.com\", \"phone\": \"555-9999\"}"
            }
          ]
        },
        {
          "name": "delete_customer",
          "description": "Deletes a customer from the CMS",
          "inputSchema": {
            "type": "object",
            "properties": {
              "customerId": {
                "type": "string",
                "description": "The unique identifier of the customer to delete"
              }
            },
            "required": ["customerId"]
          },
          "examples": [
            {
              "input": {"customerId": "123"},
              "output": "{\"message\": \"Customer deleted successfully\", \"customerId\": \"123\"}"
            }
          ]
        },
        {
          "name": "get_all_cards",
          "description": "Retrieves all cards from the CMS API",
          "inputSchema": {
            "type": "object",
            "properties": {},
            "required": []
          },
          "examples": [
            {
              "input": {},
              "output": "{\"cards\": [{\"cardId\": \"789\", \"customerId\": \"123\", \"cardNumber\": \"****1234\", \"cardType\": \"Credit\", \"expiryDate\": \"12/25\"}]}"
            }
          ]
        },
        {
          "name": "get_card_by_id",
          "description": "Retrieves a specific card by its ID",
          "inputSchema": {
            "type": "object",
            "properties": {
              "cardId": {
                "type": "string",
                "description": "The unique identifier of the card"
              }
            },
            "required": ["cardId"]
          },
          "examples": [
            {
              "input": {"cardId": "789"},
              "output": "{\"cardId\": \"789\", \"customerId\": \"123\", \"cardNumber\": \"****1234\", \"cardType\": \"Credit\", \"expiryDate\": \"12/25\"}"
            }
          ]
        },
        {
          "name": "create_card",
          "description": "Creates a new card in the CMS",
          "inputSchema": {
            "type": "object",
            "properties": {
              "customerId": {
                "type": "string",
                "description": "The ID of the customer who owns this card"
              },
              "cardNumber": {
                "type": "string",
                "description": "The card number"
              },
              "cardType": {
                "type": "string",
                "description": "The type of card (Credit, Debit, etc.)"
              },
              "expiryDate": {
                "type": "string",
                "description": "The expiry date of the card (MM/YY)"
              }
            },
            "required": ["customerId", "cardNumber", "cardType", "expiryDate"]
          },
          "examples": [
            {
              "input": {"customerId": "123", "cardNumber": "4111111111111111", "cardType": "Credit", "expiryDate": "12/25"},
              "output": "{\"cardId\": \"789\", \"customerId\": \"123\", \"cardNumber\": \"****1111\", \"cardType\": \"Credit\", \"expiryDate\": \"12/25\"}"
            }
          ]
        },
        {
          "name": "update_card",
          "description": "Updates an existing card's information",
          "inputSchema": {
            "type": "object",
            "properties": {
              "cardId": {
                "type": "string",
                "description": "The unique identifier of the card"
              },
              "cardNumber": {
                "type": "string",
                "description": "The card number"
              },
              "cardType": {
                "type": "string",
                "description": "The type of card (Credit, Debit, etc.)"
              },
              "expiryDate": {
                "type": "string",
                "description": "The expiry date of the card (MM/YY)"
              }
            },
            "required": ["cardId", "cardNumber", "cardType", "expiryDate"]
          },
          "examples": [
            {
              "input": {"cardId": "789", "cardNumber": "4111111111111111", "cardType": "Debit", "expiryDate": "06/26"},
              "output": "{\"cardId\": \"789\", \"cardNumber\": \"****1111\", \"cardType\": \"Debit\", \"expiryDate\": \"06/26\"}"
            }
          ]
        },
        {
          "name": "delete_card",
          "description": "Deletes a card from the CMS",
          "inputSchema": {
            "type": "object",
            "properties": {
              "cardId": {
                "type": "string",
                "description": "The unique identifier of the card to delete"
              }
            },
            "required": ["cardId"]
          },
          "examples": [
            {
              "input": {"cardId": "789"},
              "output": "{\"message\": \"Card deleted successfully\", \"cardId\": \"789\"}"
            }
          ]
        }
      ],
      "authentication": {
        "type": "none",
        "description": "No authentication required. The backend CMS API does not require authentication."
      },
      "rateLimit": {
        "requests": 1000,
        "period": "hour",
        "description": "CloudHub 2.0 standard rate limits apply"
      },
      "deployment": {
        "platform": "CloudHub 2.0",
        "region": "us-east-2",
        "runtime": "Mule 4.9.10",
        "java": "Java 17",
        "replicas": 1
      },
      "documentation": {
        "readme": "https://github.com/mulesoft/cms-demo-mcp-server/blob/main/README.md",
        "apiSpec": "https://anypoint.mulesoft.com/exchange/a985e716-cd81-4160-9e00-91c97363ae9d/cms-demo-api/minor/1.0/",
        "testingGuide": "See TESTING_GUIDE.md for complete testing documentation"
      },
      "support": {
        "email": "support@mulesoft.com",
        "documentation": "https://docs.mulesoft.com/mcp-connector/",
        "community": "https://help.mulesoft.com"
      }
    }
  }
}

