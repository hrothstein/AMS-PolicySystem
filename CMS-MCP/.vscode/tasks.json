{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build MCP Server",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "package",
                "-DskipTests"
            ],
            "options": {
                "cwd": "${workspaceFolder}/cms-demo-mcp-server"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run MCP Server",
            "type": "shell",
            "command": "mvn",
            "args": [
                "mule:run"
            ],
            "options": {
                "cwd": "${workspaceFolder}/cms-demo-mcp-server"
            },
            "problemMatcher": [],
            "isBackground": true
        }
    ]
}

